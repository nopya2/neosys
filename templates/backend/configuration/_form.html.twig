{{ form_start(form) }}
	<div class="form-body">
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
				<h6 class="txt-dark capitalize-font mt-20"><i class="zmdi zmdi-print mr-10"></i>Informations générales</h6>
				<hr class="light-grey-hr"/>
				<div class="form-group">
					<label class="control-label mb-10">Logo</label>
					{{ form_widget(form.imageFile, {'attr': {'class': ''}}) }}
					<span class="help-block"> {{ form_errors(form.imageFile) }}</span>
					<div>
						<img src="{{ asset('images/logo/') }}{{ configuration.imageName }}" width="80px" height="auto">
					</div>
				</div>
				<div class="form-group">
					<label class="control-label mb-10">Nom du site</label>
					{{ form_widget(form.nomSite, {'attr': {'class': 'form-control'}}) }}
					<span class="help-block"> {{ form_errors(form.nomSite) }} </span> 
				</div>
				<div class="form-group">
					<label class="control-label mb-10">Site Web</label>
					{{ form_widget(form.siteweb, {'attr': {'class': 'form-control'}}) }}
					<span class="help-block"> {{ form_errors(form.siteweb) }} </span> 
				</div>
				<div class="form-group">
					<label class="control-label mb-10">E-mail</label>
					{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
					<span class="help-block"> {{ form_errors(form.email) }} </span> 
				</div>
				<div class="form-group">
					<label class="control-label mb-10">Adresse</label>
					{{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
					<span class="help-block"> {{ form_errors(form.adresse) }} </span> 
				</div>
				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
							<label class="control-label mb-10">Telephone</label>
							{{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
							<span class="help-block"> {{ form_errors(form.telephone) }} </span> 
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label class="control-label mb-10">Boite postale</label>
							{{ form_widget(form.bp, {'attr': {'class': 'form-control'}}) }}
							<span class="help-block"> {{ form_errors(form.bp) }} </span> 
						</div>
					</div>
				</div>
			</div>
			<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
				<h6 class="txt-dark capitalize-font mt-20"><i class="zmdi zmdi-print mr-10"></i>Réseaux Sociaux</h6>
				<hr class="light-grey-hr"/>
				<div class="row">
					<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
						<div class="form-group">
							<label class="control-label mb-10">Facebook</label>
							{{ form_widget(form.facebook, {'attr': {'class': 'form-control'}}) }}
							<span class="help-block"> {{ form_errors(form.facebook) }} </span> 
						</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
						<div class="form-group">
							<label class="control-label mb-10">Twitter</label>
							{{ form_widget(form.twitter, {'attr': {'class': 'form-control'}}) }}
							<span class="help-block"> {{ form_errors(form.twitter) }} </span> 
						</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
						<div class="form-group">
							<label class="control-label mb-10">Google plus</label>
							{{ form_widget(form.googleplus, {'attr': {'class': 'form-control'}}) }}
							<span class="help-block"> {{ form_errors(form.googleplus) }} </span> 
						</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
						<div class="form-group">
							<label class="control-label mb-10">Instagram</label>
							{{ form_widget(form.instagram, {'attr': {'class': 'form-control'}}) }}
							<span class="help-block"> {{ form_errors(form.instagram) }} </span> 
						</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
						<div class="form-group">
							<label class="control-label mb-10">Pinterest</label>
							{{ form_widget(form.pinterest, {'attr': {'class': 'form-control'}}) }}
							<span class="help-block"> {{ form_errors(form.pinterest) }} </span> 
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- /Row -->
	</div>
	<div class="form-actions mt-10">
		<button type="submit" class="btn btn-success  btn-icon left-iocn mr-10"><i class="fa fa-save"></i>{{ button_label|default('Enregistrer') }}</button>
		{# <button type="button" class="btn btn-default">Cancel</button> #}
	</div>
{{ form_end(form) }}

