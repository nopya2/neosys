<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h5 class="modal-title" id="myModalLabel">Ajouter un evenement</h5>
</div>
<div class="modal-body">
    <!-- Row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="">
                <div class="panel-wrapper collapse in">
                    <div class="panel-body pa-0">
                        <div class="col-sm-12 col-xs-12">
                            <div class="form-wrap">
                                {{ form_start(form, {'attr': {'id': 'evenementForm'}}) }}
                                    <div class="form-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label mb-10">Titre</label>
                                                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                                                    <span class="help-block"> {{ form_errors(form.titre) }} </span>
                                                    <label class="control-label mb-10">Lieu</label>
                                                    {{ form_widget(form.place, {'attr': {'class': 'form-control'}}) }}
                                                    <span class="help-block"> {{ form_errors(form.place) }} </span>
                                                    <label class="control-label mb-10">Description</label>
                                                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                                                    <span class="help-block"> {{ form_errors(form.description) }} </span>
                                                    <label class="control-label mb-10">Date de debut</label>
                                                    <div class='input-group date' id='datetimepicker1'>
                                                        {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                                                        <span class="input-group-addon">
                                                            <span class="fa fa-calendar"></span>
                                                        </span>
                                                    </div>
                                                    <label class="control-label mb-10">Date de debut</label>
                                                    <div class='input-group date' id='datetimepicker2'>
                                                        {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                                                        <span class="input-group-addon">
                                                            <span class="fa fa-calendar"></span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /Row -->
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <span class="custom-loader"><i class="fa fa-spin fa-gear text-warning"></i></span>
    <button type="button" class="btn btn-success waves-effect" id="ajouter-evenement">Ajouter</button>
    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal" id="annuler-ajout-evenement">Annuler</button>
</div>