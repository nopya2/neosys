{% extends 'base.html.twig' %}

{% block title %}CategoryBlog index{% endblock %}

{% block body %}
    <h1>CategoryBlog index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category_blog in category_blogs %}
            <tr>
                <td>{{ category_blog.id }}</td>
                <td>{{ category_blog.titre }}</td>
                <td>{{ category_blog.createdAt ? category_blog.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ category_blog.updatedAt ? category_blog.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('category_blog_show', {'id': category_blog.id}) }}">show</a>
                    <a href="{{ path('category_blog_edit', {'id': category_blog.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_blog_new') }}">Create new</a>
{% endblock %}
